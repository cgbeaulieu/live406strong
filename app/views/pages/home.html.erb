<!-- Carousel
   ================================================== -->
<div id="myCarousel" class="carousel slide" data-ride="carousel">
   <!-- Indicators -->
   <ol class="carousel-indicators">
      <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
      <li data-target="#myCarousel" data-slide-to="1" class=""></li>
      <li data-target="#myCarousel" data-slide-to="2" class=""></li>
      <li data-target="#myCarousel" data-slide-to="3" class=""></li>
   </ol>
   <div class="carousel-inner">
      <div class="item active">
         <%= link_to image_tag("carousel_bg.jpg", alt: "First Slide")%>
         <div class="container">
            <div class="carousel-caption">
               <h1 style="font-family: 'Josefin Slab'">$499 for Ten Sessions</h1>
               <p></p>
               <p><a class="btn btn-lg btn-primary" href="contact" role="button">Schedule Now >></a></p>
            </div>
         </div>
      </div>
      <div class="item">
         <%= link_to image_tag("watercolor_dnXN2-DMoJw.jpeg", alt: "Second Slide")%>
         <div class="container">
            <div class="carousel-caption">
               <h1 style="margin-bottom: 10%; font-family: 'Josefin Slab'; border-radius: 25px; color: rgb(1,87,120) !important;">Now Accepting New Clients</h1>
               <p style="color: rgb(1,87,120) !important;">Don't live in the area? We offer virtual fitness consulting!</p>
               <p><a class="btn btn-lg btn-primary" href="contact" role="button">Schedule Now >></a></p>
            </div>
         </div>
      </div>
      <div class="item">
         <%= link_to image_tag("consultation.JPG", alt: "Third Slide")%>
         <div class="container">
            <div class="carousel-caption">
               <h2 style=" font-family: 'Josefin Slab';">Free Consultation For First Time Clients</h2>
               <p></p>
               <p><a class="btn btn-lg btn-primary" href="contact" role="button">Schedule Now >></a></p>
            </div>
         </div>
      </div>
      <div class="item">
         <%= link_to image_tag("1048412_4479151477430_703202202_o.jpg", alt: "Fourth Slide")%>
         <div class="container">
            <div class="carousel-caption">
               <h1 style="margin-bottom: 10%; font-family: 'Josefin Slab';">Healthy Recipes</h1>
               <p>Get inspiration for healthy eating with my tried and true recipes!  Ideas for any season and occasion.</p>
            </div>
         </div>
      </div>
   </div>
   <a class="left carousel-control" href="#myCarousel" data-slide="prev"><span class="glyphicon glyphicon-chevron-left"></span></a>
   <a class="right carousel-control" href="#myCarousel" data-slide="next"><span class="glyphicon glyphicon-chevron-right"></span></a>
</div>
<!-- /.carousel -->
